<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@drawable/background"
    tools:context="com.example.android.rouxacademy.MainActivity">
    <Button
        android:layout_width="300dp"
        android:layout_height="70dp"
        android:text="@string/button_emergency"
        android:id="@+id/emergrncy_btn"
        android:textSize="20sp"
        android:background="@drawable/red_btn"
        android:textColor="#f8f5f5"
        android:width="250dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="147dp" />

    <Button
        android:layout_width="300dp"
        android:layout_height="70dp"
        android:text="@string/button_hospital"
        android:id="@+id/hospital_btn"
        android:textSize="20sp"
        android:background="@drawable/red_btn"
        android:textColor="#f8f5f5"
        android:width="250dp"
        android:layout_below="@+id/emergrncy_btn"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="300dp"
        android:layout_height="70dp"
        android:text="@string/button_about"
        android:id="@+id/about_btn"
        android:textSize="20sp"
        android:background="@drawable/red_btn"
        android:textColor="#f8f5f5"
        android:width="250dp"
        android:layout_below="@+id/hospital_btn"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
